<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:background="@drawable/widget_outline"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detailsRoomCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room A113"
                android:textSize="@dimen/_14sdp"
                android:textColor="@android:color/black"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_8sdp"/>

            <TextView
                android:id="@+id/detailsGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battle Overseas"
                android:textSize="@dimen/_14sdp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="@dimen/_8sdp"/>

            <TextView
                android:id="@+id/detailsTurn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/itsYourTurnText"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/orange"
                android:layout_marginLeft="@dimen/_8sdp"/>

            <TextView
                android:id="@+id/detailsLastMove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last move yesterday"
                android:textSize="@dimen/_14sdp"
                android:textStyle="italic"
                android:textColor="@color/darkGray"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/_8sdp"
            android:gravity="end"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="@dimen/_115sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_8sdp">

                <ProgressBar
                    android:id="@+id/resumeProgressBar"
                    android:indeterminateDrawable="@drawable/progress_circle"
                    android:layout_width="@dimen/_31sdp"
                    android:layout_height="@dimen/_31sdp"
                    android:gravity="center"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/gameDetailsResumeButton"
                    android:layout_width="@dimen/_115sdp"
                    android:layout_height="@dimen/_31sdp"
                    android:text="@string/resumeText"
                    android:background="@drawable/button_rounded"
                    app:fontFamily="@font/fredoka_one"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false" />

            </LinearLayout>

            <Button
                android:id="@+id/gameDetailsQuitButton"
                android:layout_width="@dimen/_115sdp"
                android:layout_height="@dimen/_31sdp"
                android:text="@string/deleteText"
                android:background="@drawable/button_rounded"
                app:fontFamily="@font/fredoka_one"
                android:textSize="@dimen/_14sdp"
                android:textColor="@android:color/white"
                android:textAllCaps="false" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>